@startuml
!theme plain

entity "Person" as Person {
  * person_id : INT <<PK>>
  ---
  name : VARCHAR
  birth_date : DATE
  role : ENUM('student', 'teacher')
}

entity "DailyEntry" as DailyEntry {
  * entry_id : INT <<PK>>
  ---
  student_id : INT <<FK>> -> Person.person_id
  teacher_id : INT <<FK>> -> Person.person_id
  entry_date : DATE
  hifz : DECIMAL
  murajaah : DECIMAL
}

Person ||--o{ DailyEntry : participates_in
@enduml